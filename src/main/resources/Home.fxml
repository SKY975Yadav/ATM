<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="650.0" stylesheets="@Home.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ATM.controllers.HomeController">
    <ImageView fitHeight="500.0" fitWidth="650.0">
        <Image url="@ATM_BackGround.jpg" />
    </ImageView>
    <Label fx:id="homeHeading" alignment="CENTER" layoutX="94.0" layoutY="20.0" prefHeight="111.0" prefWidth="462.0" text="SELECT TRANSACTION " textAlignment="CENTER" wrapText="true">
        <font>
          <Font name="System Bold" size="40.0" />
        </font>
    </Label>
   <Button fx:id="withdrawButton" alignment="CENTER" layoutX="65.0" layoutY="174.0" mnemonicParsing="false" onAction="#withdrawAction" prefHeight="40.0" prefWidth="158.0" text="WITHDRAWAL">
      <font>
         <Font name="Arial Bold" size="15.0" />
      </font>
   </Button>
   <Button fx:id="depositButton" layoutX="65.0" layoutY="279.0" mnemonicParsing="false" onAction="#depositAction" prefHeight="40.0" prefWidth="158.0" text="DEPOSIT">
      <font>
         <Font name="Arial Bold" size="15.0" />
      </font>
   </Button>
   <Button fx:id="pinChangeButton" layoutX="65.0" layoutY="381.0" mnemonicParsing="false" onAction="#pinChangeAction" prefHeight="40.0" prefWidth="158.0" text="PIN CHANGE">
      <font>
         <Font name="Arial Bold" size="15.0" />
      </font>
   </Button>
   <Button fx:id="checkBalanceButton" layoutX="440.0" layoutY="174.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#checkBalanceAction" prefHeight="40.0" prefWidth="158.0" text="CHECK BALANCE">
      <font>
         <Font name="Arial Bold" size="15.0" />
      </font>
   </Button>
   <Button fx:id="miniStatementButton" layoutX="440.0" layoutY="279.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#miniStatementAction" prefHeight="40.0" prefWidth="158.0" text="MINI STATEMENT">
      <font>
         <Font name="Arial Bold" size="15.0" />
      </font>
   </Button>
   <Button fx:id="exitButton" layoutX="444.0" layoutY="381.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#exitAction" prefHeight="40.0" prefWidth="158.0" text="EXIT">
      <font>    
         <Font name="Arial Bold" size="15.0" />
      </font>
   </Button>
</AnchorPane>
