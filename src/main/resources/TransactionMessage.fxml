<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@TransactionMessage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ATM.controllers.TransactionMessageController">
    <ImageView fitHeight="500.0" fitWidth="650.0">
        <Image url="@ATM_BackGround.jpg" />
    </ImageView>
    <Label fx:id="transactionMessage" alignment="CENTER" layoutY="117.0" prefHeight="137.0" prefWidth="650.0" text="Transaction Message" textAlignment="CENTER" wrapText="true">
        <font>
          <Font name="Calibri Bold" size="45.0" />
        </font>
    </Label>
   <Button fx:id="checkBalanceButton" layoutX="459.0" layoutY="300.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#checkBalanceAction" prefHeight="40.0" prefWidth="158.0" text="CHECK BALANCE" visible="false">
      <font>
         <Font name="Arial Bold" size="15.0" />
      </font>
   </Button>
   <Label fx:id="messageForCheckBalance" contentDisplay="CENTER" layoutX="119.0" layoutY="300.0" prefHeight="40.0" prefWidth="318.0" text="Want to Check Balance Clicke here -&gt;" textAlignment="CENTER" visible="false">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </Label>
   <Button fx:id="exitButton" layoutX="459.0" layoutY="427.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#exitAction" prefHeight="40.0" prefWidth="158.0" text="EXIT">
      <font>
         <Font name="Arial Bold" size="15.0" />
      </font>
   </Button>
   <Button fx:id="rateUsButton" layoutX="459.0" layoutY="365.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#rateUsAction" prefHeight="40.0" prefWidth="158.0" text="RATE US">
      <font>
         <Font name="Arial Bold" size="15.0" />
      </font>
   </Button>
</AnchorPane>
